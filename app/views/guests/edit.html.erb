<%= link_to "All Guests", "/guests" %>
<%= link_to "All Resorts", "/resorts" %>

<h1>Update Guest</h1>
<form action="/guests/<%= @guest.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH"/>
  <label for="name">Name:</label>
    <input type="text" id="name" name="guest[name]" value="<%= @guest.name %>"/><br/>
  <p>Pass Holder:</p>
    <input type="radio" id="is_pass_holder" name="guest[pass_holder]" value="true"/>
      <label for="is_pass_holder">Yes</label><br/>
    <input type="radio" id="is_not_pass_holder" name="guest[pass_holder]" value="false"/>
      <label for="is_not_pass_holder">No</label><br/><br/>
  <label for="days_active">Days Active:</label>
    <input type="number" id="days_active" name="guest[days_active]" min="0" max="365" value="<%= @guest.days_active %>"/><br/><br/>
  <label for="days_active">Resort ID:</label>
    <input type="number" id="resort_id" name="guest[resort_id]" min="1" max="20" value="<%= @guest.resort_id %>"/><br/><br/>
  <input type="submit" id="submit"/>
</form>