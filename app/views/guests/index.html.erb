<%= link_to "All Pass Holding Guests", "/guests" %>
<%= link_to "All Resorts", "/resorts" %>

<h1>All Pass Holding Guests</h1>

<% @guests.each do |guest| %>
  <h3><%= guest.name %></h3>
  <p>Pass Holder: <%= guest.pass_holder ? "Yes" : "No" %></p>
  <p>Days Active: <%= guest.days_active %></p>
  <p>Resort ID: <%= guest.resort_id %></p>
  <%= link_to "Edit #{guest.name}", "/guests/#{guest.id}/edit" %>
<% end %>